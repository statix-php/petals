{
    "name": "statix/petals",
    "description": "A PHP templating engine based on Laravel Blade",
    "keywords": [
        "statix-php",
        "petals"
    ],
    "homepage": "https://github.com/statix-php/petals",
    "license": "MIT",
    "authors": [
        {
            "name": "Wyatt Castaneda",
            "email": "wyatt.castaneda@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "laravel/pint": "^1.2",
        "pestphp/pest": "^1.20",
        "symfony/var-dumper": "^6.2"
    },
    "autoload": {
        "psr-4": {
            "Statix\\Petals\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Statix\\Petals\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
